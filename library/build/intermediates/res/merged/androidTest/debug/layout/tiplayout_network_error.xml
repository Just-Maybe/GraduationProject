<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewNetworkErrorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivNetErro"
        android:layout_width="@dimen/px200dp"
        android:layout_height="@dimen/px200dp"
        android:src="@drawable/nowifi_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px20dp"
        android:layout_marginTop="@dimen/px40dp"
        android:text="网络异常，请检查网络设置"
        android:textSize="@dimen/px26dp" />


</LinearLayout>