<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--入住时间-->
    <RelativeLayout
        android:id="@+id/rl_live_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px200dp">

        <ImageView
            android:id="@+id/iv_calendar"
            android:layout_width="@dimen/px70dp"
            android:layout_height="@dimen/px70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px25dp"
            android:src="@drawable/icon_calendar" />

        <TextView
            android:id="@+id/tv_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px50dp"
            android:layout_marginTop="@dimen/px30dp"
            android:layout_toRightOf="@+id/iv_calendar"
            android:text="入住"
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:id="@+id/tv_enter_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_enter"
            android:layout_marginLeft="@dimen/px50dp"
            android:layout_marginTop="@dimen/px30dp"
            android:layout_toRightOf="@+id/iv_calendar"
            android:text="1月15日"
            android:textColor="@color/C_ff5a2e" />

        <TextView
            android:id="@+id/tv_total_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="共1晚" />

        <TextView
            android:id="@+id/tv_quit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_enter"
            android:layout_marginRight="@dimen/px90dp"
            android:layout_marginTop="@dimen/px30dp"
            android:text="1月15日"
            android:textColor="@color/C_ff5a2e" />

        <TextView
            android:id="@+id/tv_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px110dp"
            android:layout_marginTop="@dimen/px30dp"
            android:text="离店"
            android:textColor="@color/colorPrimaryText" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px200dp">

        <ImageView
            android:layout_width="@dimen/px70dp"
            android:layout_height="@dimen/px70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px25dp"
            android:src="@drawable/icon_search" />

        <EditText
            android:id="@+id/et_search_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px50dp"
            android:background="@null"
            android:hint="酒店名称/地址/商圈"
            android:textColor="@color/colorSecondaryText" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_book"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:layout_marginLeft="@dimen/px80dp"
        android:layout_marginRight="@dimen/px80dp"
        android:background="@drawable/shape_book_hotel"
        android:gravity="center"
        android:text="酒店预订"
        android:textColor="@color/white" />
</LinearLayout>